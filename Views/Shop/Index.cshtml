@model IEnumerable<Product>

@{
    ViewData["Title"] = "Shop Page";
}

<div class="main-page">
    <div class="album py-5 bg-light">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 box-shadow">
                            <img class="card-img-top" src="@item.ImageUrl" width="100%" height="225" alt="Card image cap">
                            <div class="card-body">
                                <p class="card-text"></p>
                                <p class="card-text">@item.ProductName</p>
                                <p class="card-text">Price: R @item.Price</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                                        <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                                    </div>
                                    <small class="text-muted">@item.Category.CategoryName</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>